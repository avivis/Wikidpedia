{
    "manifest_version": 3,
    "name": "Wikipedia Overview Summarizer",
    "version": "1.0",
    "description": "Summarizes the Wikipedia overview section with adjustable complexity.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://en.wikipedia.org/*"],
    "content_scripts": [
      {
        "matches": ["https://en.wikipedia.org/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  
  
